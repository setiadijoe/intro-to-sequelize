<!DOCTYPE html>
<html lang="en">
<%- include partial/head %>
<%- include partial/style %>
<body>
    <%- include partial/link %>     
    <a href="/teacher/add">Add Teacher</a>
    <table border="1">
        <thead>
            <tr>
                <th>ID</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Email</th>
                <th>Subjects</th>
                <th>Options</th>
            </tr>
        </thead>
        <tbody>
                <% data_teachers.forEach (row =>{%>
            <tr>
            
                <td><%= row.id%></td>
                <td><%= row.first_name%></td>
                <td><%= row.last_name%></td>
                <td><%= row.email%></td> 
                <td>    
                    <% if (row.SubjectId!==null) {%>
                        <%=row.Subject.subject_name%>
                      <%} else {%>
                        unassigned
                      <%}%>
                </td>
                <td>
                    <a href="/teacher/edit/<%=row.id%>">Edit</a>
                    <a href="/teacher/delete/<%= row.id%>">Delete</a>
                  </td>
            <% })%>

            </tr>
        </tbody>
    </table>
   
</body>
</html>