<!DOCTYPE html>
<html lang="en">
<%- include partial/head %>
<%- include partial/style%>
<body>
<%- include partial/link%>
    <a href="/student/add">Add Student</a>
    <table border="1">
        <thead>
            <tr>
                <th>ID</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Email</th>
                <th>Action</th>
                <th>Option</th>
            </tr>
        </thead>
        <tbody>
                <% data.forEach(function(row){  %>
            <tr>      
                <td><%= row.id%></td>
                <td><%= row.first_name%></td>
                <td><%= row.last_name%></td>
                <td><%= row.email%></td>
                <td><a href="/student/<%=row.id%>/addsubject">Add Subject</a></td>
                <td>
                     <a href="/student/edit/<%=row.id%>">Edit</a>
                     <a onclick="javascript:return confirm('Are you sure want to delete this student?')" href="/student/delete/<%= row.id%>">Delete</a>
                </td>     
            </tr>
            <% })%>
        </tbody>
    </table>
   
</body>
</html>